  }

  .input::placeholder {
    color: var(--text-secondary);
  }

  .bookmark-save-btn {
    background: var(--surface-color);
    border-color: var(--border-color);
    color: var(--text-secondary);
  }

  .bookmark-save-btn:hover {
    background: var(--primary-color);
    border-color: var(--primary-color);
    color: white;
